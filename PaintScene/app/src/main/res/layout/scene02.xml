<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:paddingLeft="32dp"
        android:paddingTop="35dp">

        <ImageView
            android:id="@+id/r1c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r1c1" />

        <ImageView
            android:id="@+id/r1c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/r1c1"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r1c2" />

        <ImageView
            android:id="@+id/r1c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/r1c2"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r1c3" />

        <ImageView
            android:id="@+id/r1c4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/r1c3"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r1c4" />

        <ImageView
            android:id="@+id/r1c5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/r1c4"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r1c5" />
        <ImageView
            android:id="@+id/r1c6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/r1c5"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r1c6" />

        <ImageView
            android:id="@+id/r2c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/r1c1"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r2c1"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/r2c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r1c3"
            android:layout_toRightOf="@+id/r2c2"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r2c3" />

        <ImageView
            android:id="@+id/r3c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/r3c1"
            android:layout_toRightOf="@+id/r3c2"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r3c3" />

        <ImageView
            android:id="@+id/r4c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r4c2"
            android:layout_below="@+id/r3c2"
            android:scaleType="fitXY"
            android:layout_alignStart="@+id/r3c2"
            android:layout_toStartOf="@+id/r3c3"
            android:layout_alignBottom="@+id/r3c3" />

        <ImageView
            android:id="@+id/r4c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/r4c1"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r4c3"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/r1c3" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/hide"
            android:onClick="changeScenes" />

        <ImageView
            android:id="@+id/r3c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r3c1"
            android:cropToPadding="true"
            android:layout_below="@+id/r2c1"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_toStartOf="@+id/r4c2" />

        <ImageView
            android:id="@+id/r3c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r3c2"
            android:scaleType="fitXY"
            android:layout_below="@+id/r2c2"
            android:layout_toEndOf="@+id/r1c1" />

        <ImageView
            android:id="@+id/r2c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r2c2"
            android:scaleType="fitXY"
            android:layout_below="@+id/r1c1"
            android:layout_toEndOf="@+id/r2c1" />

        <ImageView
            android:id="@+id/r4c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/paint_square"
            android:src="@drawable/r4c1"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/r1c3"
            android:layout_below="@+id/r4c2" />

    </RelativeLayout>

</merge>